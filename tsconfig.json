{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "lib": ["DOM", "ES2020"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
} 